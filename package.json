{
  "name": "taiphanvan_frontend",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate-analytics": "tsx src/scripts/validate-analytics.ts",
    "prebuild": "npm run validate-analytics"
  },
  "dependencies": {
    "@next/third-parties": "^15.3.3",
    "@types/js-cookie": "^3.0.6",
    "googleapis": "^150.0.1",
    "js-cookie": "^3.0.5",
    "next": "15.3.1",
    "react": "^19.0.0",
    "react-cookie-consent": "^9.0.0",
    "react-dom": "^19.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@swc/core": "^1.12.1",
    "@swc/jest": "^0.2.38",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^29.7.0",
    "critters": "^0.0.23",
    "css-loader": "^7.1.2",
    "cssnano": "^6.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lightningcss": "^1.29.3",
    "lint-staged": "^15.5.1",
    "postcss": "^8.4.31",
    "postcss-preset-env": "^10.1.6",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "whatwg-fetch": "^3.6.20"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "^next/image$": "<rootDir>/src/__mocks__/nextImage.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/.next/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "@swc/jest",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": true
            },
            "transform": {
              "react": {
                "runtime": "automatic"
              }
            }
          }
        }
      ]
    }
  }
}
